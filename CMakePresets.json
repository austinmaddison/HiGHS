{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-x64",
            "displayName": "Windows x64",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build-windows-x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_SHARED_LIBS": "ON",
                "FAST_BUILD": "ON"
            }
        },
        {
            "name": "linux-x64",
            "displayName": "Linux x64",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-linux-x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_CXX_FLAGS": "-O3 -march=native",
                "CMAKE_C_FLAGS": "-O3 -march=native"
            }
        },
        {
            "name": "android-arm64",
            "displayName": "Android ARM64",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-android-arm64",
            "toolchainFile": "$env{ANDROID_NDK_ROOT}/build/cmake/android.toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ANDROID_ABI": "arm64-v8a",
                "ANDROID_PLATFORM": "android-24",
                "BUILD_SHARED_LIBS": "ON",
                "FAST_BUILD": "ON"
            }
        },
        {
            "name": "android-arm32",
            "inherits": "android-arm64",
            "displayName": "Android ARM32",
            "binaryDir": "${sourceDir}/build-android-arm32",
            "toolchainFile": "$env{ANDROID_NDK_ROOT}/build/cmake/android.toolchain.cmake",
            "cacheVariables": {
                "ANDROID_ABI": "armeabi-v7a"
            }
        },
        {
            "name": "android-x86",
            "inherits": "android-arm64",
            "displayName": "Android x86",
            "binaryDir": "${sourceDir}/build-android-x86",
            "toolchainFile": "$env{ANDROID_NDK_ROOT}/build/cmake/android.toolchain.cmake",
            "cacheVariables": {
                "ANDROID_ABI": "x86"
            }
        },
        {
            "name": "android-x64",
            "inherits": "android-arm64",
            "displayName": "Android x64",
            "binaryDir": "${sourceDir}/build-android-x64",
            "toolchainFile": "$env{ANDROID_NDK_ROOT}/build/cmake/android.toolchain.cmake",
            "cacheVariables": {
                "ANDROID_ABI": "x86_64"
            }
        },
        {
            "name": "ios-arm64",
            "displayName": "iOS ARM64",
            "generator": "Xcode",
            "binaryDir": "${sourceDir}/build-ios-arm64",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_ARCHITECTURES": "arm64",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "12.0",
                "BUILD_SHARED_LIBS": "OFF",
                "FAST_BUILD": "ON"
            }
        },
        {
            "name": "macos-universal",
            "displayName": "macOS Universal",
            "generator": "Xcode",
            "binaryDir": "${sourceDir}/build-macos-universal",
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "10.15",
                "BUILD_SHARED_LIBS": "ON",
                "FAST_BUILD": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64",
            "configurePreset": "windows-x64",
            "configuration": "Release"
        },
        {
            "name": "linux-x64",
            "configurePreset": "linux-x64"
        },
        {
            "name": "android-arm64",
            "configurePreset": "android-arm64"
        },
        {
            "name": "android-arm32",
            "configurePreset": "android-arm32"
        },
        {
            "name": "android-x86",
            "configurePreset": "android-x86"
        },
        {
            "name": "android-x64",
            "configurePreset": "android-x64"
        },
        {
            "name": "ios-arm64",
            "configurePreset": "ios-arm64"
        },
        {
            "name": "macos-universal",
            "configurePreset": "macos-universal"
        }
    ]
}